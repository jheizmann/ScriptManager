<?xml version="1.0" encoding="UTF-8"?>
<deploydescriptor>
    <global>
        <id>scriptmanager</id>
        <title>Script Manager extension</title>
        <version>1.7.0</version>
        <patchlevel>0</patchlevel>
        <vendor>ontoprise GmbH</vendor>
        <maintainer>ontoprise GmbH</maintainer>
        <instdir>extensions/ScriptManager</instdir>
        <description>
			The Script Manager extension organizes JavaScript libraries such that parts of the program code are not stored multiple times. The extension is invisible to common users while improving SMW+ general performance.
        </description>
		<helpurl>http://www.smwplus.com/index.php/Help:Script_Manager_Extension</helpurl>
        <dependencies>
            <dependency from="1.17.0">mw</dependency>
        </dependencies>
        <license>GPL-v2</license>
    </global>

    <codefiles>
        <!-- empty -->
    </codefiles>

    <wikidumps>
        <!-- empty -->
    </wikidumps>

    <resources>
        <!-- empty -->
    </resources>

    <configs>
        <successor ext="smw"/>
        <new>
            <require name="scriptmanager"
                file="extensions/ScriptManager/SM_Initialize.php" />
        </new>
	</configs>
</deploydescriptor>